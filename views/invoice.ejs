<% layout("/layouts/boilerplate.ejs") %>

<style>
  /* Page wrapper */
  .invoice-page {
    display: flex;
    justify-content: center; /* horizontal center */
    padding: 20px 60px; /* top padding for navbar */
    background: #f5f5f5;
  }

  /* Invoice card */
  .invoice-container {
    background: #fff;
    width: 100%;
    max-width: 850px;
    padding: 30px 40px;
    border-radius: 16px;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    animation: fadeIn 0.8s ease;
  }

  /* Headings */
  .invoice-container h2 {
    text-align: center;
    color: #b62d2d;
    font-size: 2.2rem;
    margin-bottom: 20px;
  }

  .invoice-container h3 {
    margin-top: 30px;
    color: #b62d2d;
  }

  /* Text */
  .invoice-container p {
    font-size: 1rem;
    margin: 6px 0;
    color: #333;
  }

  /* Table */
  .invoice-container table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 15px;
  }

  .invoice-container th,
  .invoice-container td {
    padding: 12px;
    border-bottom: 1px solid #ddd;
  }

  .invoice-container th {
    background: linear-gradient(135deg, #3498db, #2980b9);
    color: white;
  }

  /* Total */
  .total-amount {
    text-align: right;
    font-size: 1.2rem;
    font-weight: bold;
    color: #27ae60;
    margin-top: 20px;
  }

  /* Footer */
  .invoice-footer {
    margin-top: 40px;
    padding-top: 15px;
    border-top: 1px solid #ddd;
    text-align: center;
    font-size: 0.9rem;
    color: #555;
  }

  .invoice-footer span {
    color: #b62d2d;
    font-weight: bold;
  }

  /* Animation */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .invoice-container {
      padding: 20px;
    }
  }

  /*  */
  .invoice-note {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-left: 6px solid #f093fb;
    padding: 180px 12px 16px;
    margin: 20px 0 30px;
    border-radius: 12px;
    color: #fff;
    font-size: 0.95rem;
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
    animation: slideIn 0.6s ease-out, pulse 2s infinite;
    position: relative;
    overflow: hidden;
  }

  .invoice-note::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    animation: shimmer 2s infinite;
  }

  .invoice-note strong {
    color: #f093fb;
    font-weight: 600;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      box-shadow: 0 8px 20px rgba(5, 20, 83, 0.3);
    }
    50% {
      box-shadow: 0 8px 30px rgba(93, 7, 103, 0.5);
    }
  }

  @keyframes shimmer {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }
</style>
<style>
   @media (max-width: 750px) {
    .invoice-note {
        padding-top: 250px !important;
    }
}
</style>
