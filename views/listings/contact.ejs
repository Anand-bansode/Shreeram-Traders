<% layout("/layouts/boilerplate.ejs") %>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #f9f2f2;
    color: #333;
  }

  /* =========================
      Page Wrapper
  ========================== */
  .contact-page {
    background: linear-gradient(135deg, #f9f2f2, #f0f8ff);
    padding: 190px 20px 100px;
  }

  /* =========================
      Container
  ========================== */
  .contact-container {
    max-width: 1100px;
    margin: auto;
  }

  /* =========================
      Header
  ========================== */
  .contact-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .contact-header h2 {
    font-size: 2.8rem;
    color: #d32f2f; /* Rich red, high contrast */
    font-weight: 800;
    margin: 0 0 12px;
  }

  .contact-header p {
    color: #555;
    margin-top: 8px;
    font-size: 1.1rem;
  }

  /* =========================
      Layout
  ========================== */
  .contact-wrapper {
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
  }

  /* =========================
      Card Base
  ========================== */
  .card {
    background: #fff;
    border-radius: 18px;
    padding: 32px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.16);
    border: 1px solid #e0e0e0;
    transition: transform 0.3s ease;
    flex: 1;
    min-width: 300px;
  }

  .card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 50px rgba(0,0,0,0.2);
  }

  /* =========================
      Form Card
  ========================== */
  .contact-form form {
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .contact-form input,
  .contact-form textarea {
    padding: 14px 16px;
    border: 1px solid #aaa;
    border-radius: 8px;
    font-size: 1rem;
    outline: none;
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    border-color: #c62828;
    box-shadow: 0 0 0 4px rgba(198, 40, 40, 0.2);
  }

  .contact-form button {
    background: #d32f2f;
    color: #fff;
    padding: 14px;
    font-size: 1rem;
    font-weight: bold;
    border: none;
    border-radius: 10px;
    cursor: pointer;
  }

  .contact-form button:hover {
    background: #c62828;
    box-shadow: 0 10px 25px rgba(198, 40, 40, 0.4);
    transform: translateY(-3px);
  }

  /* =========================
      Info Card
  ========================== */
  .contact-info {
    background: #fff5f5;
    border: 1px solid #e57373;
  }

  .contact-info h3 {
    color: #d32f2f;
    margin-bottom: 10px;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .contact-info p {
    color: #444;
    line-height: 1.7;
    margin: 8px 0;
    font-size: 1.05rem;
  }

  .contact-info a {
    text-decoration: none;
    font-weight: 600;
  }

  .phone {
    color: #2e7d32;
  }

  .whatsapp {
    color: #1b5e20;
  }

  .email {
    color: #0d47a1;
  }

  .contact-info a:hover {
    text-decoration: underline;
  }

  /* =========================
      Map
  ========================== */
  .map iframe {
    width: 100%;
    height: 240px;
    border: none;
    border-radius: 12px;
    margin-top: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
  }

  /* =========================
      Mobile Fix
  ========================== */
  @media (max-width: 750px) {
    .contact-page {
      padding-top: 260px;
    }

    .contact-header h2 {
      font-size: 2.2rem;
    }

    .contact-wrapper {
      gap: 25px;
    }

    .card {
      padding: 28px 20px;
    }
  }
</style>

