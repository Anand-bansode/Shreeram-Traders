<% layout("/layouts/boilerplate.ejs") %>

<style>
/* ===== Page Background ===== */
body {
    background: linear-gradient(120deg, #f8f9fa, #fff1f2);
}

/* ===== Container ===== */
.login-form-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    padding-top: 200px;
    position: relative;
    overflow: hidden;
}

/* ===== RIGHT TOP CIRCLE ===== */
.login-form-container::after {
    content: "";
     position: absolute;
    width: 320px;
    height: 320px;
    border-radius: 50%;
    top: 10px;
    right: -160px;
    transform: scale(0);
    background: linear-gradient(45deg, #6a0dad, #ff4500);
    animation: circleGrowRight 1.4s ease-out forwards;
}

/* ===== LEFT BOTTOM CIRCLE ===== */
.login-form-container::before {
    content: "";
     position: absolute;
    width: 260px;
    height: 260px;
    border-radius: 50%;

    /* left bottom position */
    bottom: -100px;
    left: -120px;
    transform: scale(0);
    background: linear-gradient(45deg, #00b4d8, #48cae4);
    animation: circleGrowLeft 1.6s ease-out forwards;
}

/* ===== Circle Animations ===== */
@keyframes circleGrowRight {
    0% {
        transform: scale(0);
        background: linear-gradient(45deg, #8c04ee, #ff4500);
    }

    50% {
        transform: scale(1.1);
        background: linear-gradient(45deg, #ff4500, #ffb703);
    }

    100% {
        transform: scale(1);
        background: linear-gradient(45deg, orangered, rgb(255, 21, 0));
    }
}

@keyframes circleGrowLeft {
   0% {
        transform: scale(0);
        background: linear-gradient(45deg, #8c04ee, #ff4500);
    }

    50% {
        transform: scale(1.1);
        background: linear-gradient(45deg, #ff4500, #ffb703);
    }

    100% {
        transform: scale(1);
        background: linear-gradient(45deg, rgb(218, 80, 16), rgb(138, 11, 136));
    }
}

/* ===== Login Form ===== */
.login-form {
    width: 100%;
    max-width: 350px;
    background: #fff;
    padding: 32px 26px;
    border-radius: 14px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.12);
    display: flex;
    flex-direction: column;
    gap: 16px;

    /* entry animation */
    opacity: 0;
    transform: translateY(30px);
    animation: slideFade 0.9s ease forwards;
}

@keyframes slideFade {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.login-form h3 {
    text-align: center;
    font-size: 1.6rem;
    color: #333;
}

/* ===== Inputs ===== */
.login-form input {
    padding: 12px;
    font-size: 1rem;
    border: 1.5px solid #ddd;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.login-form input:focus {
    outline: none;
    border-color: orangered;
    box-shadow: 0 0 10px rgba(255,69,0,0.35);
    transform: scale(1.02);
}

/* ===== Button ===== */
.register-btn {
    position: relative;
    overflow: hidden;
    background: #f5f7f8;
    color: #fff;
    padding: 12px 30px;
    border: none;
    border-radius: 30px;
    font-size: 16px;
    cursor: pointer;
    z-index: 1;
    transition: all 0.3s ease;
}

.register-btn::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, purple, orangered);
    transform: scaleX(1);
    transform-origin: left;
    transition: transform 0.5s ease;
    z-index: -1;
}

.register-btn:hover::before {
    transform: scaleX(0);
}

.register-btn:hover {
    color: orangered;
    border: 1px solid orangered;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255,69,0,0.4);
}

.register-btn:active {
    transform: scale(0.96);
}

/* ===== Register Link ===== */
.login-form span {
    text-align: center;
    font-size: 0.95rem;
}

.login-form a {
    color: orangered;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
}

.login-form a:hover {
    transform: translateX(5px);
    text-decoration: underline;
}

/* ===== Responsive ===== */
@media (max-width: 750px) {
    .login-form-container {
        padding-top: 120px !important;
    }
}

@media (max-width: 500px) {
    .login-form {
        max-width: 100%;
    }
}
</style>


<style>
   @media (max-width: 750px) {
    .login-form-container {
        padding-top: 300px !important;
    }
}
</style>
<div class="login-form-container">
<form method="POST" class="login-form" action="/login" >
  <h3>User Login</h3>

  <input type="email" name="email" placeholder="Email" required>

  <input type="password" name="password" placeholder="Password" required>

  <button type="submit" class="register-btn">Login</button>

  <p>New user? <a href="/register">Register</a></p>
</form>
</div>
