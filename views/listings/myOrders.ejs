<% layout("/layouts/boilerplate.ejs") %>
<style>
   @media (max-width: 750px) {
    #a {
        padding-top: 80px !important;
    }
}
</style>
<div class="container-fluid" id="a" style="background-color: #bab9b0;">
<h2 style="text-align:center; padding-top: 200px; color:#b62d2d;">My Orders</h2>

<div class="orders-container">
  <% if(orders.length === 0){ %>
    <p style="text-align:center; font-size:1.2rem; color:#555;">No orders yet.</p>
  <% } %>

  <% orders.forEach(order => { %>
    <div class="order-card">
      <div class="order-header">
        <span>Order ID: <strong><%= order._id %></strong></span>
        <span>Date: <strong><%= order.createdAt.toDateString() %></strong></span>
      </div>

      <div class="order-body">
        <p>Total: <strong>₹ <%= order.totalAmount %></strong></p>
        <p>Status: 
          <% if(order.status === "Delivered"){ %>
            <span class="status delivered">Delivered</span>
          <% } else if(order.status === "Cancelled"){ %>
            <span class="status cancelled">Cancelled</span>
          <% } else { %>
            <span class="status pending">Pending</span>
          <% } %>
        </p>
      </div>

      <div class="order-footer">
        <% if(order.invoiceGenerated){ %>
          <a href="/invoice/<%= order._id %>">View Invoice</a>
        <% } else { %>
          <span class="status pending">Pending Invoice</span>
        <% } %>
      </div>
    </div>
  <% }) %>

  <div style="display: flex; gap: 15px; justify-content: center; margin-top: 20px;">
    <a href="/user/dashboard" class="back-btn">⬅ Back to Dashboard</a>
    <a href="/order" class="back-btn">          <i class="fas fa-shopping-cart me-2 fs-5"></i>
 Order Now</a>
  </div>

</div>
</div>
<style>
  
@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.orders-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 25px;
  margin-top: 40px;
}

.order-card {
  background: linear-gradient(-45deg, #ffffff, #f3f3f3, #e8f4f8, #f0f0f0);
  background-size: 400% 400%;
  width: 90%;
  max-width: 950px;
  border-radius: 14px;
  padding: 20px 25px;
  box-shadow: 0 15px 35px rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
  gap: 12px;
  animation: gradientShift 6s ease infinite;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.order-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 25px 50px rgba(0,0,0,0.18);
  animation-duration: 3s;
}

.order-header, .order-body, .order-footer {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  font-size: 1rem;
  color: #333;
}

.status {
  padding: 6px 14px;
  border-radius: 20px;
  font-weight: bold;
  font-size: 0.85rem;
  color: white;
}

.status.pending { background: #f39c12; }
.status.delivered { background: #27ae60; }
.status.cancelled { background: #e74c3c; }

.order-footer a {
  background: #3498db;
  color: white;
  padding: 8px 18px;
  border-radius: 25px;
  text-decoration: none;
  font-size: 0.9rem;
  transition: transform 0.2s ease, box-shadow 0.3s ease;
}

.order-footer a:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 15px rgba(0,0,0,0.2);
}

.back-btn {
  margin: 40px 0 60px;
  padding: 12px 28px;
  background: linear-gradient(135deg,#9b59b6,#8e44ad);
  color: white;
  text-decoration: none;
  border-radius: 30px;
  font-size: 1rem;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.back-btn:hover {
  transform: scale(1.08);
  box-shadow: 0 8px 20px rgba(0,0,0,0.25);
}

@media (max-width: 768px) {
  .order-card {
    width: 95%;
  }

  .order-header, .order-body, .order-footer {
    flex-direction: column;
    gap: 8px;
  }
}
</style>
