<% layout("/layouts/boilerplate.ejs") %>

<style>
  @media (max-width: 750px) {
    .container-fluid {
      padding-top: 280px !important;
    }
  }

  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #333;
  }

 

  .main-content {
    background: white;
    border-radius: 16px;
    padding: 24px 28px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.12);
  }

  h2 {
    font-size: 1.8rem;
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .table-bordered {
    border: none;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  }

  .table-bordered th {
    background: linear-gradient(135deg, #0d6efd, #0b5ed7);
    color: white;
    border: none;
    padding: 14px 18px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 14px;
  }

  .table-bordered td {
    padding: 12px 18px;
    border-bottom: 1px solid #e9ecef;
  }

  .table-striped tbody tr:nth-of-type(even) {
    background-color: #f8f9fa;
  }

  .table-bordered tbody tr:hover {
    background-color: #f1f3f5;
    transform: scale(1.01);
    transition: all 0.15s ease;
  }

  h4 {
    font-size: 1.4rem;
    font-weight: 600;
    color: #2c3e50;
    margin-top: 30px;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  p {
    color: #6c757d;
    font-style: italic;
    margin-top: 16px;
    font-size: 14px;
  }

  .btn {
    border-radius: 10px;
    padding: 8px 16px;
    border: none;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .btn-secondary {
    background: linear-gradient(135deg, #6c757d, #495057);
    color: white;
  }

  .btn-secondary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(108,117,125,0.25);
  }

  .btn-info {
    background: linear-gradient(135deg, #17a2b8, #117a8b);
    color: white;
  }

  .btn-info:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(23,162,184,0.25);
  }

  .mt-4.p-4.border.rounded.bg-light {
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 16px !important;
    padding: 24px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    border-left: 6px solid #0d6efd;
    margin-top: 30px !important;
  }

  .form-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 6px;
  }

  .form-control {
    border: 2px solid #ced4da;
    border-radius: 8px;
    padding: 10px 14px;
  }

  .form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 4px rgba(13,110,253,0.2);
  }

  .btn-primary {
    background: linear-gradient(135deg, #0d6efd, #0b5ed7);
    color: white;
    border: none;
    padding: 10px 22px;
    border-radius: 10px;
    font-weight: 600;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(13,110,253,0.25);
  }

  @media (max-width: 768px) {
    .container-fluid {
      padding-top: 180px !important;
      padding-left: 12px;
      padding-right: 12px;
    }

    .main-content {
      padding: 18px;
    }

    .table-bordered th,
    .table-bordered td {
      padding: 10px 14px;
    }

    .form-control,
    .btn {
      padding: 6px 10px;
      font-size: 14px;
    }

    .mt-4.p-4.border.rounded.bg-light {
      padding: 20px !important;
    }
  }
</style>

<div class="container-fluid" style="padding-top: 170px;">
  <div class="row">
    <!-- SIDEBAR -->
    <%- include("partials/sidebar") %>

    <!-- MAIN CONTENT -->
    <div class="col-md-10 p-4 main-content">
      <h2>Order Details</h2>

      <!-- ORDER BASIC INFO -->
      <table class="table table-bordered table-striped mt-3">
        <tr>
          <th class="table-primary">Name</th>
          <td><%= order.name %></td>
        </tr>
        <tr>
          <th class="table-primary">Phone</th>
          <td><%= order.phone %></td>
        </tr>
        <tr>
          <th class="table-primary">Address</th>
          <td><%= order.address %></td>
        </tr>
        <tr>
          <th class="table-primary">Status</th>
          <td><%= order.status %></td>
        </tr>
        <tr>
          <th class="table-primary">Date</th>
          <td><%= order.createdAt.toDateString() %></td>
        </tr>
      </table>

      <!-- PRODUCTS -->
      <h4 class="mt-4">Products</h4>

      <% if(order.products && order.products.length > 0) { %>
        <table class="table table-bordered table-striped">
          <thead class="table-dark">
            <tr>
              <th>Product Name</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% order.products.forEach(p => { %>
              <tr>
                <td><%= p.name %></td>
                <td><%= p.quantity %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No products found</p>
      <% } %>

      <a href="/admin/orders" class="btn btn-secondary mt-3">
        â¬… Back to Orders
      </a>

      <!-- UPDATE AMOUNTS -->
      <form action="/admin/orders/<%= order._id %>/update-amounts"
            method="POST"
            class="mt-4 p-4 border rounded bg-light">

        <h4 class="mb-3">Update Order Amounts</h4>

        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Subtotal</label>
            <input type="number" name="subTotal"
                   value="<%= order.subTotal %>"
                   class="form-control" step="0.01">
          </div>

          <div class="col-md-6">
            <label class="form-label">GST (%)</label>
            <input type="number" name="gst"
                   value="<%= order.gst %>"
                   class="form-control" step="0.01">
          </div>

          <div class="col-md-6">
            <label class="form-label">Delivery Charges</label>
            <input type="number" name="deliveryCharges"
                   value="<%= order.deliveryCharges %>"
                   class="form-control" step="0.01">
          </div>

          <div class="col-md-6">
            <label class="form-label">Discount</label>
            <input type="number" name="discount"
                   value="<%= order.discount %>"
                   class="form-control" step="0.01">
          </div>

          <div class="col-md-6">
            <label class="form-label">Total Amount</label>
            <input type="number" name="totalAmount"
                   value="<%= order.totalAmount %>"
                   class="form-control" step="0.01" readonly>
          </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">
          ðŸ’¾ Save Amounts
        </button>
      </form>

      <a href="/admin/orders/<%= order._id %>/invoice"
         target="_blank"
         class="btn btn-info mt-3">
        ðŸ“„ Generate Invoice
      </a>
    </div>
  </div>
</div>

<script>
function recalc() {
  let subTotal = parseFloat(document.querySelector("input[name='subTotal']").value) || 0;
  let gst = parseFloat(document.querySelector("input[name='gst']").value) || 0;
  let delivery = parseFloat(document.querySelector("input[name='deliveryCharges']").value) || 0;
  let discount = parseFloat(document.querySelector("input[name='discount']").value) || 0;

  let gstAmount = (subTotal * gst) / 100;
  let final = subTotal + gstAmount + delivery - discount;

  document.querySelector("input[name='totalAmount']").value = final.toFixed(2);
}

document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll("input").forEach(inp => {
    inp.addEventListener("input", recalc);
  });
  recalc();
});
</script>
